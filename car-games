int game(void)
{
    int ran;
    ran = 1 + rand() % 2;
    return ran;
}

int main()
{
    //max limit in the game
    int max = 100;
    
    srand(time(0));
    
    int opponent = 0;
    for (int i = 1; i <= max; i++)
    //loop
    {
        int result = game();
        if (result == 1)
            opponent++;
    }
   cout <<"Your score: "<< opponent << endl <<endl;
   cout <<"My score: "<< max - opponent << endl << endl;
    if(opponent  < max - opponent )
    {
        cout << "Yeppy ðŸ˜† I won!" << endl << endl;
    }
    else if(opponent  == max - opponent)
    {
